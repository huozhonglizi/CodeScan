<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlg_bg"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_task_dlg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="新建分组"
        android:textColor="#929292"
        android:textSize="18sp" />

    <View
        android:id="@+id/dlg_dividing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_task_dlg_title"
        android:layout_marginTop="10dp"
        android:background="#D2D2FF" />

    <EditText
        android:id="@+id/et_task_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dlg_dividing"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg_selector"
        android:hint="分组名称"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_task_group"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dlg_btn_bg"
            android:text="取消"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/dlg_btn_bg"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>